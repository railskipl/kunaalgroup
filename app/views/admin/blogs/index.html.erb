<div id="content">
 	<p class='button'>
 		
 		<%= link_to  "Add Blogs", new_admin_blog_path, :class => 'button positive' %>
 		</p>
		<p class='clear'></p>
		   

			<table class="admintable">
			  <tr class="admintablehd">
              <td width="25%">Description</td>
			    <td width="25%">Body</td>
			    <td width="27%" style="text-align: center !important;">Action</td>
			  </tr>
			
			<% @blogs.each do |blog| %>
			  <tr>
			    <td><%= truncate(blog.description, :length => 110).html_safe %> </td>
			  	 <td><%= truncate(blog.body, :length => 110).html_safe %> </td>
			   <td style="text-align: center !important;"> <%= link_to "Edit", edit_admin_blog_path(blog),:action=>"edit",:id=>blog.id,:class=>'button positive' %> &nbsp;&nbsp; 
				</td>
				<td><%=link_to 'Destroy',:action=>"delete",:id=>blog.id , :class=>'button positive'  %></td>
			     
			  </tr>
			<% end %>
			</table>
			<br />
	
</div>